import { ApolloServer, gql } from 'apollo-server';

// Define your schema
const typeDefs = gql `
  type Query {
    hello: String
  }
`;

// Define your resolvers
const resolvers = {
    Query: {
        hello: () => 'Hello, world!',
    },
};

// Create the Apollo Server
const server = new ApolloServer({ typeDefs, resolvers });

// Start the server
server.listen().then(({ url }) => {
    console.log(`ğŸš€ Server ready at ${url}`);
});